@model UrlShortenService.Models.URL

@{
    ViewBag.Title = "Home Page";
}
<!DOCTYPE html>
<html>
<body>

    <style>
        .content {
            max-width: 100%;
            margin: auto;
        }
    </style>

    @using (Html.BeginForm("Create", "Home"))
    {
        @Html.AntiForgeryToken()
        <div class="container text-center">
            <div >
                <br />
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                <h3>Enter URL to Shorten Below</h3>
                <div >

                    <div >
                        @Html.EditorFor(model => model.LONG_URL, new { htmlAttributes = new { @class = "form-control center-block" } })
                        @Html.ValidationMessageFor(model => model.LONG_URL, "", new { @class = "text-danger" })

                    </div>
                    <div>
                        <br />
                        <input type="submit" value="Get Short Url" class="btn btn-default" />
                    </div>
                </div>
            </div>
        </div>

    }

    @if (Model.SHORT_URL != null)
    {
        <br />
        <div class="container text-center" >
            <div >
                <h4>Your Short Url Below</h4>
                <div >
                    <input class="form-control center-block" id="shorturl" value="@Model.SHORT_URL">
                </div>
                <div >
                    <br />
                    <button class="btn btn-default" onclick="copyMyText()" id="copyBtn">Copy Button</button>
                </div>
            </div>
        </div>

    }

    <script>
        function copyMyText() {
            var textToCopy = document.getElementById("shorturl");
            textToCopy.select();
            document.execCommand("copy");
        }
    </script>

</body>
</html>


